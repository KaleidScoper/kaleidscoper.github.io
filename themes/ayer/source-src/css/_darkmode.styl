// 暗色模式主题配色（护眼 + 阅读优化）
dark-background        = #1c1f26       // 主背景：深靛蓝灰
dark-surface           = #2a2f3a       // 内容卡片背景
dark-border            = #3b414c       // 边框线
dark-text              = #d0d0d0       // 主文字
dark-subtext           = #aaaaaa       // 次要文字
dark-link              = #80cfff       // 链接蓝色
dark-link-hover        = #a8daff
dark-code-bg           = #2e3440       // 代码背景
dark-code-text         = #ffcc99       // 代码内容
dark-tag-bg            = #3a3f4a       // 标签背景
dark-tag-text          = #cccccc       // 标签文字
dark-highlight         = #ffb347       // 点缀色（高亮）
dark-muted             = #888          // 占位符、禁用等

darkmode()
  // 主背景
  background: dark-background

  // 全局文字（排除 font[color] 及其后代元素、链接、代码块及其子元素）
  *:not(font[color]):not(font[color] *):not(a):not(.highlight):not(.highlight *):not(pre):not(pre *)
    color: dark-text

  // 全局链接颜色（模仿亮色模式的实现方式）
  a
    color: dark-link
    &:hover
      color: dark-link-hover

  // 文章正文中的代码块
  .article-entry code
    background: dark-code-bg !important
    color: dark-code-text !important

  // 标题、分类、归档等主要文字
  .article-header .article-title,
  .share-outer i,
  .category-list .category-list-item i,
  .category-list a:hover .category-list-item,
  .article-date,
  .article-category .article-category-link,
  .archive-year-wrap .archive-year,
  .archive-article-date,
  a.toc-link,
  .tag-list > .tag-list-item:before,
  .article-tag-list:before
    color: dark-text !important

  // 次要文字区域
  .share-icons a i,
  .float_btns i,
  #reward .reward-p,
  #reward .reward-p i,
  .local-search-input
    color: dark-subtext !important

  // 固定背景
  .is-position-fixed
    background-color: transparent

  // 评论插件字体
  .v *
    color: dark-subtext !important

  // 标签样式
  .tag-list > .tag-list-item .tag-list-link,
  .article-tag-list .article-tag-list-link
    background: dark-tag-bg !important
    color: dark-tag-text !important

  // Waline / Valine 评论区样式
  #vcomments-box #vcomments
    background-color: rgba(255, 255, 255, 0.05) !important
    *
      color: dark-text !important

  .v .vbtn
    background-color: transparent !important

  .v .vlist .vcard .vhead .vsys
    border: 1px solid dark-border !important
    background-color: transparent !important

  // 表单占位符颜色
  input::-webkit-input-placeholder
    color: dark-muted
  input::-moz-input-placeholder
    color: dark-muted
  input::-ms-input-placeholder
    color: dark-muted

  // 文章引用块样式
  .article-entry blockquote
    border-left-color: #4a9eff !important
    color: #c8d3dc !important
    background-color: rgba(74, 158, 255, 0.08) !important

  // 分类页面链接颜色
  .categories-box a
    color: dark-link
  .categories-box a:hover
    color: dark-link-hover

  // 友情链接
  #friends_link .friends_li a
    background-color: rgba(255, 255, 255, 0.05)
    color: dark-text

  // 单独定义博客主标题 & 副标题颜色（适用于带背景图的页面顶部）
  h1,
  .site-title
    color: #5fc5f5   // 主标题：醒目的青蓝色，良好对比

  .subtitle,
  .site-subtitle,
  .article-subtitle
    color: #8db4c7   // 副标题：略暗蓝灰，适合阅读
