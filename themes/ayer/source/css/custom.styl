$wrap-width = convert(hexo-config('layout.article_width'))
$aside-width = convert(hexo-config('layout.sidebar_width'))
$mouse-url = convert(hexo-config('mouse.path'))

if hexo-config('mouse.enable')
    body
        cursor: url($mouse-url),auto;

// VS Code Dark+ Theme for Code Blocks
figure.highlight
    background: #1E1E1E !important
    border-radius: 5px
    margin: 20px 0
    padding: 15px
    
.highlight
    margin: 0
    padding: 0
    border-radius: 3px
    overflow: auto
    font-size: 14px
    color: #D4D4D4
    
    pre
        font-family: "Consolas", "Monaco", monospace
        border: none
        margin: 0
        padding: 0
        background: none

    table
        margin: 0
        width: auto
        border: none

    td
        border: none
        padding: 0

    .gutter
        pre
            color: #858585
            text-align: right
            padding-right: 20px

    .code
        pre
            padding-left: 20px

    .line
        height: 20px
        line-height: 20px

    // VS Code Dark+ syntax colors
    .keyword
        color: #C586C0  // purple for keywords

    .function
        color: #DCDCAA  // yellow for functions

    .string
        color: #CE9178  // orange for strings

    .number
        color: #B5CEA8  // green for numbers

    .boolean
        color: #569CD6  // blue for boolean

    .comment
        color: #6A9955  // green for comments

    .class
        color: #4EC9B0  // teal for classes

    .variable
        color: #9CDCFE  // light blue for variables

    .operator
        color: #D4D4D4  // white for operators

    .builtin
        color: #4EC9B0  // teal for built-in functions

    .property
        color: #9CDCFE  // light blue for properties

    .tag
        color: #569CD6  // blue for HTML/XML tags

    .attribute
        color: #9CDCFE  // light blue for attributes

.sidebar
    left - $aside-width
    width $aside-width
    &.on
        left 0
.content
    &.on
        margin-left 0 !important
.navbar-toggle
    left 1.5rem + $aside-width
.search-form-wrap
    right $aside-width

@media(min-width: 768px)
    .outer, .wrap
        width $wrap-width !important
@media(max-width: 768px)
    .tocbot
        display none !important
    .sidebar
        left 0
        &.on
            left - $aside-width
    .content
        transform translateX($aside-width)
        &.on
            transform translateX(0)

// 随机句子样式
.random-sentence
    text-align center
    margin 1rem 0
    padding 0.5rem 1rem
    font-size 115%
    color inherit
    font-style normal
    line-height 1.6
    border-top 1px solid #eee
    padding-top 1rem
    
    br
        display block
        margin 0.2rem 0
